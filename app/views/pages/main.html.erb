<div class="container padding-inside-top-md padding-inside-bottom-md">

  <div class="row">

    <div class="col-lg-10 col-lg-offset-1">
      <!-- <img src="assets/images/hero.png" class="img-responsive"> -->
          <img src="assets/hero.png" class="img-responsive">
    </div>

  </div>

  <div class="row">

    <div class="col-lg-4 col-lg-offset-1">

      <% if current_user.present? %>
      <li>
        <a href="/users/edit">
          <h1>
            Logged in
          </h1>

          <p>
            Logged in text
          </p>
        </a>
      </li>

      <% else %>
      <li>
        <a href="/users/edit">
          <h1>
            Logged out
          </h1>

          <p>
            Logged out text
          </p>
        </a>
        </li>
      <% end %>




    </div>

    <div class="col-lg-4 col-lg-offset-2">
      <form class="margin-above-top-sm">
        <div class="form-group">
          <label for="exampleInputFullName1" class="sr-only">
            Full name
          </label>
          <input type="text" class="form-control" id="exampleInputFullName1" placeholder="Full name">
        </div>

        <div class="form-group">
          <label for="exampleInputEmail1" class="sr-only">
            Email
          </label>

          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1" class="sr-only">
            Password
          </label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>


        <button type="submit" class="btn btn-primary btn-block">
          Sign up for free
        </button>

        <hr>

        <button type="submit" class="btn btn-primary btn-block">
          <i class="fa fa-fw fa-google"></i> Sign up free with Google
        </button>


      </form>
    </div>
  </div>
</div>
