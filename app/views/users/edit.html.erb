<!-- Validation failure messages -->
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Select Tickers for <%= @user.email %></h3>
  <p>Tickers must work on <a href="  https://www.google.com/finance">  https://www.google.com/finance</a></p>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_user/<%= @user.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for email -->
      <div class="form-group">
        <!-- <label for="email" class="control-label">
          Email
        </label> -->

        <input type="hidden" id="email" name="email" placeholder="Email" class="form-control" value="<%= @user.email %>">
      </div>

      <div class="panel-body">

        <form action="/update_user/<%= @user.id %>" method="post">
            <!-- <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"> -->

          <div class="form-group">
            <label for="ticka" class="control-label">
              First Ticker
            </label>
            <input id="ticka" name="ticka" placeholder="Add a ticker..." class="field" value="<%= @user.ticka %>">
          </div>

          <div class="form-group">
            <label for="tickb" class="control-label">
              Second Ticker
            </label>
            <input id="tickb" name="tickb" placeholder="Add a ticker..." class="field" value="<%= @user.tickb %>">
          </div>

          <div class="form-group">
            <label for="tickc" class="control-label">
              Third Ticker
            </label>
            <input id="tickc" name="tickc" placeholder="Add a ticker..." class="field" value="<%= @user.tickc %>">
          </div>

          <!-- <div class="form-group">
            <button class="">
              Update Tickers
            </button>
          </div> -->

          <button class="btn btn-warning">
            Update Tickers
          </button>
          or
          <!-- <a href="/users/<%= @user.id %>">Cancel</a> -->
          <a href="/">Cancel</a>
        </form>
      </div>











    </form>
  </div>
</div>
